<% if user_signed_in? %>
    <h1>ルーム予約</h1>

    <% if flash.notice %>
        <p class="alert"><%= flash.alert %></p>
    <% end %>

    <%= render "shared/error", obj: @booking %>

    <%= form_for @booking, method: :confirm, url: hotels_booking_confirm_path do |f| %>

    
        <div class="form-group">
            <%= f.label :check_in, '開始日' %>
            <%= f.date_field :check_in, class: 'form-control' %>
        </div>
    
        <div class="form-group">
            <%= f.label :check_out, '終了日' %>
            <%= f.date_field :check_out, class: 'form-control' %>
        </div>      

        <div class="form-group">
            <%= f.label :client_num, '人数' %>
            <%= f.number_field :client_num, class: 'form-control' %>
        </div> 
        
        <%= f.hidden_field :hotel_id, value: @hotel.id %>


        <%= f.submit '予約確認画面へ', class: 'btn btn-primary btn-block' %>
    <% end %>

    <p><%= link_to "TOPへ戻る", root_path %></p>
<% else %>
    <h1>ログインしてください</h1>
    <p><%= link_to "TOPへ戻る", root_path %></p>
<% end %>