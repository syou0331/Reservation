<% if user_signed_in? %>
    <h1>ルーム情報登録</h1>

    <% if flash.notice %>
        <p class="alert"><%= flash.alert %></p>
    <% end %>

    <%= render "shared/error", obj: @hotel %>

    <%= form_for @hotel do |f| %>

        <div class="field">
            <%= f.label :hotel_image ,"ルーム画像" %>
            <%= f.file_field :hotel_image %>
        </div>

        <div class="form-group">
            <%= f.label :hotel_name, 'ルーム名' %>
            <%= f.text_field :hotel_name, class: 'form-control' %>
        </div>
    
        <div class="form-group">
            <%= f.label :hotel_introduction, 'ルーム紹介' %>
            <%= f.text_field :hotel_introduction, class: 'form-control' %>
        </div>
    
        <div class="form-group">
            <%= f.label :hotel_price, '料金' %>
            <%= f.number_field :hotel_price, class: 'form-control' %>
        </div>

        <div class="form-group">
            <%= f.label :hotel_address, '住所' %>
            <%= f.text_field :hotel_address, class: 'form-control' %>
        </div>
        

        <%= f.hidden_field :user_id, value: @user.id %>

        <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
    <% end %>

    <p><%= link_to "TOPへ戻る", root_path %></p>
<% else %>
    <h1>ログインしてください</h1>
    <p><%= link_to "TOPへ戻る", root_path %></p>
<% end %>
