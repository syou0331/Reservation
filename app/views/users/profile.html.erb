<% if flash.notice %>
    <p class="notice"><%= flash.notice %></p>
    <% elsif flash.alert%>
    <p class="alert"><%= flash.alert %></p>
<% end %>

<h3>プロフィール</h3>

<%= render "shared/error", obj: @user %>

<%= form_for @user do |f| %>
  <% if @user.avatar.attached? %>
    <%= image_tag @user.avatar, size: '200x200' %>
  <% else %>
    <%= image_tag 'default_icon.jpeg', size: '200x200' %>
  <% end %>

  <div class="field">
    <%= f.label :avatar ,"アイコン画像" %>
    <%= f.file_field :avatar %>
  </div>
      <table>
        <tr>
          <th><%= f.label :name ,"名前" %></th>
          <td><%= f.text_field :name %></td>
        </tr>

        <tr>
          <th><%= f.label :introduction ,"自己紹介" %></th>
          <td><%= f.text_area :introduction %></td>
        </tr>
      </table>


      <div>
        <ul>
          <li><%= f.submit "編集を完了する" %></li>
        </ul>
      </div>
    <% end %>